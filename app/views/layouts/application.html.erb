<head>
  <meta charset="utf-8">

  <!-- Use the .htaccess and remove these lines to avoid edge case issues.
       More info: h5bp.com/b/378 -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>T&acirc;puaki</title>
  <meta name="description" content="">
  <meta name="author" content="">

  <!-- Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width,initial-scale=1">
  
  <%= stylesheet_link_tag "boilerplate", "960", "formtastic", "formtastic_changes", "bx_styles", "styles" %>
  
  
  <%= csrf_meta_tag %>
  <%= javascript_include_tag "libs/modernizr-2.0.6.min.js"%>
  
  <!-- For fonts //-->
  <script type="text/javascript" src="http://use.typekit.com/qus3obj.js"></script>
  <script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  
</head>

<body>

  <div id="container" class="container12">
    <header class="grid5 clearfix nuvo <%= ((request.path.eql? "/") ? nil : "small") %> ">
      <h1 class="dropshadow">
        <%= link_to raw("t&acirc;puaki"), root_url %>
      </h1>
    </header>
    <nav class="grid7 nuvo bold <%= ((request.path.eql? "/") ? nil : "small") %>">
      <ul>
        
        <li class="shadow last rounded checkout" <%= raw("style=\"display:block;\"") unless cookies[:cart].blank? %>>
          <div id="count" class="rounded clearfix">
            <p>
              <%= cookies[:cart].split(",").count unless cookies[:cart].blank? %>
            </p>
          </div>
          <%= content_tag :a, :href => cart_path do %>
            <%= image_tag "cart.png" %> Checkout
          <% end %>
        </li>
        
        <li class="shadow last rounded">
          <%= link_to raw("All&nbsp;&nbsp;Appeals"), appeals_path %>
        </li>
        
        <li class="shadow last rounded">
          <%= link_to raw("Make an Appeal"), new_appeal_path %>
        </li>
      </ul>
    </nav>
    <div id="main" role="main" class="grid12">
      <%= yield %>
    </div>
    <footer class="grid12 footer center">
      Tapuaki is a <strong>Proof Of Concept</strong>&nbsp;&nbsp;|&nbsp;&nbsp;&copy; Nick Malcolm 2011
    </footer>
  </div>
  
  <!--
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="/javascripts/libs/jquery-1.6.2.min.js"><\/script>')</script>//-->
  <%= javascript_include_tag "libs/jquery-1.6.2.min", "libs/jquery-ui-1.8.16.custom.min", "libs/rails.js", "mylibs/jquery.cookies.js" %>
  <%= content_for(:deferred_scripts) %>

  <script>
    window._gaq = [['_setAccount','UAXXXXXXXX1'],['_trackPageview'],['_trackPageLoadTime']];
    Modernizr.load({
      load: ('https:' == location.protocol ? '//ssl' : '//www') + '.google-analytics.com/ga.js'
    });
  </script>

  
  <script>
  $(document).ready(
    function(){
        <%= content_for(:jquery) %>
    });
  </script>
  
  
