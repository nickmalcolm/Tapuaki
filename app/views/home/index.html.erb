<div class="slider-container">
  <div id="slider" class="clearfix" style="background-color:#333;color:#fff;">
    <% @featured.each do |f| %>
      <div class="slide">
        <div class="image">
          <%= image_tag f.photo(:featured) %>
        </div>
        <div class="text">
          <h2 class="nuvo">
            <%= truncate f.title.upcase, :length => 25 %>
          </h2>
          <h3 class="secondary">
            <%#= truncate s[:subtitle], :length => 35 %>
          </h3>
          <p>
            <%= truncate f.description, :length => 190, :separator => ' ' %>
          </p>
        </div>
        <div class="">
          <%= link_to "Act Now".downcase, "", :class=>"button shadow rounded nuvo_bold" %>
        </div>
      </div>
    <% end%>
  </div>
</div>

<div class="grid12 first clearfix cta_container">
  <div class="grid4 prefix1 suffix1 first">
    <%= link_to "See More Requests".downcase, requests_url, :class=>"button shadow rounded nuvo_bold" %>
  </div>
  
  <div class="grid4 prefix1 suffix1 last">
    <%= link_to "Make a Request".downcase, "", :class=>"button shadow rounded nuvo_bold" %>
  </div>
</div>


