<% content_for(:deferred_scripts) do %>
  <script type="text/javascript" src="javascripts/mylibs/jquery.bxSlider.min.js"></script>
<% end %>

<% content_for(:jquery) do %>
    $('#slider').bxSlider({
        auto: true,
        autoHover: true,
        pause: 12000
      });
    $('.slider-container').mouseenter(function(){
      $(".bx-prev, .bx-next").fadeIn('slow');
    }).mouseleave(function(){
      $(".bx-prev, .bx-next").fadeOut();
    });
<% end %>