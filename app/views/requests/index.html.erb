<h1>Listing requests</h1>

<div class="grid9 first clearfix">
  <% @requests.each_with_index do |request, i| %>
    <% klass = "grid3 card_container rounded ";
        klass += "first" if i%3 == 0;
        klass += "last"  if (i+1)%3 == 0 %>
    <%= div_for request, :class=>klass do %>
      <div class="card">
        <%= image_tag request.photo(:small) %>
        <%= link_to request.title, request, :class => "title" %>
        <p>
          <%= request.description %>
        </p>
      </div>
    <% end %>
  <% end %>
</div>

<div class="grid3 last" style="float:right">
  <h2>Sidebar</h2>
</div>

<div class="grid12 lone">
  <%= link_to 'New Request', new_request_path %>
</div>