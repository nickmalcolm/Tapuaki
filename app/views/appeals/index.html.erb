<h1>Discover Appeals</h1>

<div class="grid9 first clearfix">
  <% @appeals.each_with_index do |appeal, i| %>
    <% klass = "grid3 lifted card_container rounded ";
        klass += "first" if i%3 == 0;
        klass += "last"  if (i+1)%3 == 0 %>
    <%= div_for appeal, :class=>klass do %>
      <%= render "card", :appeal => appeal %>
    <% end %>
  <% end %>
</div>

<div class="grid12 lone">
  <%= link_to 'Make An Appeal', new_appeal_path, :class => "grid6 lone button nuvo rounded bold" %>
</div>